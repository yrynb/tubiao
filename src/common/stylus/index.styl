// 存放需要变量的样式
@import "variable.styl"
@import "common.styl"
@import "dark.styl"
@import "editor.styl"

$my-scrollbar-width = 6px
// 自定义滚动条
.my-scroll
  ::-webkit-scrollbar
    width $my-scrollbar-width
    height 6px
    background-color transparent

  ::-webkit-scrollbar-track
    border-radius $my-scrollbar-width
    background-color transparent

  ::-webkit-scrollbar-thumb
    border-radius $my-scrollbar-width
    background-color transparent

  ::-webkit-scrollbar-corner
    background transparent
  &:hover
    ::-webkit-scrollbar-thumb
      border-radius $my-scrollbar-width
      background-color #bfbfbf
  &.map-scroll-back-color
    &:hover
      ::-webkit-scrollbar-thumb
        border-radius $my-scrollbar-width
        background-color rgba(102,102,102,1)
  &.my-scroll-theme
    &:hover
      ::-webkit-scrollbar-thumb
        border-radius $my-scrollbar-width
        background-color $color-theme



