.rotate
  animation rotate 2s linear infinite

@keyframes rotate{
  0%{
    transform: rotate(0)
  }
  100%{
    transform: rotate(360deg)
  }
}
// 列表grid布局
gridWrapper($gridWidth) {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax($gridWidth, 1fr));
  width: 100%;
  .component{
    padding: 10px;
  }
}